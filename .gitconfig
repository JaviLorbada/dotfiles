[user]
    name = JaviLorbada
    email = javi@javilorbada.com
[github]
    user = JaviLorbada
    username = JaviLorbada
[core] # Use custom `.gitignore` and `.gitattributes`
    excludesfile =  ~/.gitignore_global 
    excludesfile = ~/.gitignore
	attributesfile = /Users/javilorbada/.gitattributes
    autocrlf = false
    safecrlf = false
    quotepath = false
[color]
    branch = auto
    diff = auto
    status = auto
    ui = true
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[merge] # Include summaries of merged commits in newly created merge commit messages
    log = true
[alias]
    a = add .
    co = checkout
    cm = commit -m
    ca = commit -a
    ci = commit -am
    st = status
    s = status -sb
    br = branch
    brd = branch -d
    ss = stash save
    sp = stash pop
    us = submodule update --recursive
    p = push
    pu = push -u
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    hist2 = log --graph --pretty='%C(yellow)%h (%cr) |%Cred %an%C(white)%d%Creset %s'
    type = cat-file -t
    dump = cat-file -p
    mf = merge --no-ff
    r = rebase
    prstash = "!f() { git fetch $1 refs/pull-requests/$2/from:$3; } ; f"
[push]
    default = simple
[diff "localizablestrings"]
    textconv = "iconv -f utf-16 -t utf-8"
[credential]
    helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[diff "plist"]
	textconv = plutil -convert xml1 -o -
