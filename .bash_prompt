# Colors
RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
MAGENTA="\[\033[1;31m\]"
ORANGE="\[\033[1;33m\]"
PURPLE="\[\033[1;35m\]"
WHITE="\[\033[1;37m\]"
BOLD=""
RESET="\[\033[m\]"

# Git
# enable the git bash completion commands, should have homebrew
if command -v brew &>/dev/null && [ -f "$(brew --prefix)/etc/bash_completion" ]; then
    # shellcheck source=/dev/null
    . "$(brew --prefix)/etc/bash_completion"
fi

gc() {
  git add .
  git commit -am "$*"
}

# wo = workspace
wo() {
  local code_dir=~/Desktop/Workspace/
  cd "$(find "$code_dir" -type d -maxdepth 3 | grep -i "$*" | grep -v /Pods --max-count=1)" || return
}

# wor = workspace at work
wor() {
  local code_dir=~/Desktop/JaviLorbada/StashRepos/
  cd "$(find "$code_dir" -type d -maxdepth 3 | grep -i "$*" | grep -v /Pods --max-count=1)" || return
}

openx(){
  if test -n "$(find . -maxdepth 1 -name '*.xcworkspace' -print -quit)"; then
    echo "Opening workspace"
    open ./*.xcworkspace
    return
  elif test -n "$(find . -maxdepth 1 -name '*.xcodeproj' -print -quit)"; then
    echo "Opening project"
    open ./*.xcodeproj
    return
  else
    echo "Nothing found"
  fi
}
