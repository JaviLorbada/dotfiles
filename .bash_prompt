# Colors for bash prompt
RED="\[\033[0;31m\]"
GREEN="\[\033[0;32m\]"

# wo = workspace - quickly jump to project directories
wo() {
  local code_dir=~/Documents/Workspace/
  cd "$(find "$code_dir" -type d -maxdepth 3 | grep -i "$*" | grep -v /Pods --max-count=1)" || return
}

# openx = open Xcode workspace or project
openx(){
  if test -n "$(find . -maxdepth 1 -name '*.xcworkspace' -print -quit)"; then
    echo "Opening workspace"
    open ./*.xcworkspace
    return
  elif test -n "$(find . -maxdepth 1 -name '*.xcodeproj' -print -quit)"; then
    echo "Opening project"
    open ./*.xcodeproj
    return
  else
    echo "Nothing found"
  fi
}
